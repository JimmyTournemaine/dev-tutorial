server {
    listen       80;
    listen  [::]:80;
    server_name  localhost;
    server_tokens off;

    location /api {
        proxy_pass http://{{ package_app_api_container }}:3000/api;
    }

    location /socket.io {
        proxy_pass http://{{ package_app_api_container }}:3001/socket.io;
    }

    location /server-status {
        stub_status;
    }

    location / {
        root   /usr/share/nginx/dev-tutorial-app;
        try_files $uri $uri/ /index.html =404;
        # FIXME (waiting for https://github.com/angular/angular/issues/26152)
        # add_header Content-Security-Policy "script-src 'self' 'nonce-{{ package_app_nonce }}'; style-src 'self' 'nonce-{{ package_app_nonce }}'; font-src https://fonts.gstatic.com 'self'; object-src 'none'; connect-src 'self' wss: ws:; default-src 'self';" always;
        add_header Content-Security-Policy "script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; font-src https://fonts.gstatic.com 'self'; object-src 'none'; connect-src 'self' wss: ws:; default-src 'self';" always;
        add_header X-Frame-Options deny;
        add_header X-Content-Type-Options nosniff;
    }
}
